{% block title %}Hello YadoStaffController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! ✅</h1>

    This friendly message is coming from:
    <ul>
        <li>Your controller at <code><a href="{{ '/Users/xearts/MySymfonyProjectsPractice/riyousya_kanri/src/Controller/YadoStaffController.php'|file_link(0) }}">src/Controller/YadoStaffController.php</a></code></li>
        <li>Your template at <code><a href="{{ '/Users/xearts/MySymfonyProjectsPractice/riyousya_kanri/templates/yado_staff/index.html.twig'|file_link(0) }}">templates/yado_staff/index.html.twig</a></code></li>
    </ul>

    <div class="example-wrapper">
        <h1>Hello {{ controller_name }}! ✅</h1>
        {{ form_start(form) }}
