        {{ form_row(form.firstName) }}

        <button class="btn">{{ button_label|default('Serch') }}</button>
        <div style="display: none;">
            {{ form_rest(form) }}
        </div>
        {{ form_end(form) }}
    </div>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>FamillyName</th>
            <th>FirstName</th>
            <th>契約開始日</th>
            <th>契約終了日</th>
            <th>契約区分</th>
        </tr>
        </thead>
        <tbody>
        {% for yadostaff in yadostaffs %}
            <tr>
                <td>{{ yadostaff.id }}</td>
                <td>{{ yadostaff.famillyName }}</td>
                <td>{{ yadostaff.firstName }}</td>
                <td>{{ yadostaff.nyuusyaAt ? yadostaff.nyuusyaAt|date('Y-m-d') : '' }}</td>
                <td>{{ yadostaff.taisyaAt ? yadostaff.taisyaAt|date('Y-m-d') : '' }}</td>
                <td>{{ yadostaff.position }}</td>
                <td>
                {#<a href="{{ path('yadostaff_show', {'id': yadostaff.id}) }}">show</a>#}
                <a href="{{ path('staff_edit', {'id': yadostaff.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
